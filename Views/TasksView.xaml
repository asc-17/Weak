<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Weak.ViewModels"
             xmlns:models="clr-namespace:Weak.Models"
             x:Class="Weak.Views.TasksView"
             Title="Tasks"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto, *">
        
        <!-- Header -->
        <Grid Padding="24,16" ColumnDefinitions="*, Auto" BackgroundColor="White">
            <VerticalStackLayout Spacing="2">
                <Label Text="Workload" 
                       FontFamily="InterBold"
                       FontSize="28" 
                       TextColor="{StaticResource TextPrimaryLight}"/>
                <Label Text="{Binding CurrentDate}" 
                       FontFamily="InterRegular"
                       FontSize="14" 
                       TextColor="{StaticResource TextSecondaryLight}"/>
            </VerticalStackLayout>
            
            <!-- Settings Icon -->
            <Border Grid.Column="1" 
                    StrokeShape="RoundRectangle 20"
                    HeightRequest="40"
                    WidthRequest="40"
                    BackgroundColor="Transparent"
                    StrokeThickness="0"
                    VerticalOptions="Center">
                <Label Text="&#xE713;" 
                       FontFamily="Segoe MDL2 Assets"
                       FontSize="20"
                       HorizontalOptions="Center" 
                       VerticalOptions="Center" 
                       TextColor="{StaticResource TextPrimaryLight}"/>
            </Border>
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="24,8,24,24" Spacing="24">
                
                <!-- Tasks Section -->
                <VerticalStackLayout Spacing="16">
                    <Label FontFamily="InterBold"
                           FontSize="20" 
                           TextColor="{StaticResource TextPrimaryLight}">
                        <Label.Text>
                            <Binding Path="TaskCount" StringFormat="Tasks ({0})"/>
                        </Label.Text>
                    </Label>
                    
                    <CollectionView ItemsSource="{Binding Tasks}"
                                    SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:TaskItem">
                                <Grid ColumnDefinitions="Auto, *, Auto" 
                                      ColumnSpacing="12"
                                      Padding="0,12"
                                      RowDefinitions="Auto">
                                    
                                    <!-- Checkbox -->
                                    <Border HeightRequest="24" 
                                            WidthRequest="24" 
                                            StrokeShape="Ellipse"
                                            Stroke="{Binding IsCompleted, Converter={StaticResource BoolToCheckboxColorConverter}}"
                                            BackgroundColor="{Binding IsCompleted, Converter={StaticResource BoolToCheckboxBgConverter}}"
                                            StrokeThickness="2"
                                            VerticalOptions="Center">
                                        <Label Text="&#x2713;" 
                                               FontSize="14"
                                               FontAttributes="Bold"
                                               TextColor="White"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"
                                               IsVisible="{Binding IsCompleted}"/>
                                        <Border.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:TasksViewModel}}, Path=ToggleTaskCommand}" 
                                                                  CommandParameter="{Binding .}"/>
                                        </Border.GestureRecognizers>
                                    </Border>
                                    
                                    <!-- Task Title -->
                                    <Label Grid.Column="1" 
                                           Text="{Binding Title}" 
                                           FontFamily="InterRegular"
                                           FontSize="17" 
                                           TextColor="{Binding IsCompleted, Converter={StaticResource BoolToTextColorConverter}}"
                                           TextDecorations="{Binding IsCompleted, Converter={StaticResource BoolToStrikethroughConverter}}"
                                           VerticalOptions="Center"/>
                                    
                                    <!-- Due Date / Status -->
                                    <Label Grid.Column="2" 
                                           Text="{Binding DeadlineText}" 
                                           FontFamily="InterMedium"
                                           FontSize="13" 
                                           TextColor="{Binding DeadlineColor}"
                                           VerticalOptions="Center"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>

                <!-- Subjects Section -->
                <VerticalStackLayout Spacing="16">
                    <Label Text="Subjects" 
                           FontFamily="InterBold"
                           FontSize="20" 
                           TextColor="{StaticResource TextPrimaryLight}"/>
                    
                    <CollectionView ItemsSource="{Binding Subjects}"
                                    SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:Subject">
                                <Grid ColumnDefinitions="Auto, *, Auto" 
                                      Padding="0,12" 
                                      ColumnSpacing="12">
                                    
                                    <!-- Subject Icon Badge -->
                                    <Border HeightRequest="40" 
                                            WidthRequest="40" 
                                            StrokeShape="RoundRectangle 12" 
                                            BackgroundColor="{Binding IconBackground}" 
                                            StrokeThickness="0"
                                            VerticalOptions="Center">
                                        <Label Text="{Binding Icon}" 
                                               FontSize="18"
                                               TextColor="{Binding IconColor}"
                                               HorizontalOptions="Center" 
                                               VerticalOptions="Center"/> 
                                    </Border>
                                    
                                    <!-- Subject Name -->
                                    <Label Grid.Column="1" 
                                           Text="{Binding Name}" 
                                           FontFamily="InterRegular"
                                           FontSize="17" 
                                           VerticalOptions="Center" 
                                           TextColor="{StaticResource TextPrimaryLight}"/>
                                    
                                    <!-- Chevron Arrow -->
                                    <Label Grid.Column="2" 
                                           Text="&#xE76C;" 
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="16" 
                                           TextColor="{StaticResource Gray400}"
                                           VerticalOptions="Center"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>

                <!-- Add New Task Button -->
                <Border StrokeShape="RoundRectangle 12"
                        BackgroundColor="{StaticResource Primary}"
                        StrokeThickness="0"
                        Padding="16"
                        Margin="0,16,0,16">
                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                        <Label Text="+" 
                               FontFamily="InterRegular"
                               FontSize="20" 
                               TextColor="White"
                               VerticalOptions="Center"/>
                        <Label Text="Add New Task" 
                               FontFamily="InterSemiBold"
                               FontSize="17" 
                               TextColor="White"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding AddTaskCommand}"/>
                    </Border.GestureRecognizers>
                </Border>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
