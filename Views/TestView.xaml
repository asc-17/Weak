<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Weak.Views.TestView"
             BackgroundColor="White">
    <VerticalStackLayout Padding="24" Spacing="16" VerticalOptions="Center">
        <Label Text="Test View Loaded!" 
               FontSize="24"
               FontAttributes="Bold"
               TextColor="#135bec"
               HorizontalOptions="Center"/>
        <Label Text="If you see this, the app is running." 
               FontSize="16"
               HorizontalOptions="Center"
               TextColor="#64748b"/>
        <Label Text="The crash is in one of the other views or in Shell TabBar." 
               FontSize="14"
               HorizontalOptions="Center"
               TextColor="#94a3b8"/>
    </VerticalStackLayout>
</ContentPage>
