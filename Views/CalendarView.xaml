<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Weak.ViewModels"
             xmlns:models="clr-namespace:Weak.Models"
             x:Class="Weak.Views.CalendarView"
             Title="Calendar"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto, Auto, Auto, *">
        
        <!-- Top App Bar -->
        <Grid Padding="24,8,24,8" ColumnDefinitions="*, Auto" BackgroundColor="White">
            <VerticalStackLayout Spacing="0">
                <Label Text="{Binding CurrentMonth}" 
                       FontFamily="InterBold" 
                       FontSize="24" 
                       TextColor="{StaticResource TextPrimaryLight}"/>
                <Label Text="{Binding CurrentWeek}" 
                       FontFamily="InterMedium" 
                       FontSize="14" 
                       TextColor="{StaticResource TextSecondaryLight}"/>
            </VerticalStackLayout>
            
            <HorizontalStackLayout Grid.Column="1" Spacing="8">
                <Border StrokeShape="RoundRectangle 20"
                        HeightRequest="40"
                        WidthRequest="40"
                        BackgroundColor="Transparent"
                        StrokeThickness="0">
                    <Image Source="search.svg" 
                           HeightRequest="20"
                           WidthRequest="20"
                           HorizontalOptions="Center" 
                           VerticalOptions="Center"/>
                </Border>
                <Border StrokeShape="RoundRectangle 20"
                        HeightRequest="40"
                        WidthRequest="40"
                        BackgroundColor="Transparent"
                        StrokeThickness="0">
                    <Label Text="⋯" 
                           FontFamily="InterBold"
                           FontSize="24"
                           HorizontalOptions="Center" 
                           VerticalOptions="Center" 
                           TextColor="{StaticResource TextSecondaryLight}"/>
                </Border>
            </HorizontalStackLayout>
        </Grid>

        <!-- Calendar View Mode Tabs -->
        <Grid Grid.Row="1" Padding="24,8,24,12" ColumnDefinitions="Auto,Auto,Auto" ColumnSpacing="24" BackgroundColor="White">
            <VerticalStackLayout Spacing="4">
                <Label Text="Timeline" 
                       FontFamily="InterSemiBold"
                       FontSize="14" 
                       TextColor="{Binding ViewMode, Converter={StaticResource ViewModeColorConverter}, ConverterParameter='Timeline'}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SwitchViewCommand}" CommandParameter="Timeline"/>
                    </Label.GestureRecognizers>
                </Label>
                <BoxView Color="{StaticResource Primary}" 
                         HeightRequest="2" 
                         CornerRadius="1"
                         IsVisible="{Binding ViewMode, Converter={StaticResource ViewModeVisibilityConverter}, ConverterParameter='Timeline'}"/>
            </VerticalStackLayout>
            
            <VerticalStackLayout Grid.Column="1" Spacing="4">
                <Label Text="Day" 
                       FontFamily="InterSemiBold"
                       FontSize="14" 
                       TextColor="{Binding ViewMode, Converter={StaticResource ViewModeColorConverter}, ConverterParameter='Day'}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SwitchViewCommand}" CommandParameter="Day"/>
                    </Label.GestureRecognizers>
                </Label>
                <BoxView Color="{StaticResource Primary}" 
                         HeightRequest="2" 
                         CornerRadius="1"
                         IsVisible="{Binding ViewMode, Converter={StaticResource ViewModeVisibilityConverter}, ConverterParameter='Day'}"/>
            </VerticalStackLayout>
            
            <VerticalStackLayout Grid.Column="2" Spacing="4">
                <Label Text="Month" 
                       FontFamily="InterSemiBold"
                       FontSize="14" 
                       TextColor="{Binding ViewMode, Converter={StaticResource ViewModeColorConverter}, ConverterParameter='Month'}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SwitchViewCommand}" CommandParameter="Month"/>
                    </Label.GestureRecognizers>
                </Label>
                <BoxView Color="{StaticResource Primary}" 
                         HeightRequest="2" 
                         CornerRadius="1"
                         IsVisible="{Binding ViewMode, Converter={StaticResource ViewModeVisibilityConverter}, ConverterParameter='Month'}"/>
            </VerticalStackLayout>
        </Grid>

        <!-- Day View -->
        <ScrollView Grid.Row="3" BackgroundColor="White" IsVisible="{Binding ViewMode, Converter={StaticResource ViewModeVisibilityConverter}, ConverterParameter='Day'}">
            <VerticalStackLayout Spacing="0">
                
                <!-- Horizontal Date Selector -->
                <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Never" Padding="16,12">
                    <HorizontalStackLayout Spacing="8" BindableLayout.ItemsSource="{Binding WeekDays}">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate x:DataType="models:CalendarDay">
                                <Border StrokeShape="RoundRectangle 12"
                                        BackgroundColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='primary'}"
                                        Stroke="Transparent"
                                        StrokeThickness="0"
                                        Padding="12,8"
                                        WidthRequest="60"
                                        HeightRequest="80">
                                    <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                                        <!-- Day Name -->
                                        <Label Text="{Binding Date, StringFormat='{0:ddd}'}"
                                               FontFamily="InterMedium"
                                               FontSize="12"
                                               TextColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='text'}"
                                               HorizontalOptions="Center"
                                               TextTransform="Uppercase"/>
                                        
                                        <!-- Day Number -->
                                        <Label Text="{Binding DayNumber}"
                                               FontFamily="InterBold"
                                               FontSize="20"
                                               TextColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='text'}"
                                               HorizontalOptions="Center"/>
                                        
                                        <!-- Task Indicator Dots -->
                                        <HorizontalStackLayout Spacing="3" HorizontalOptions="Center" Margin="0,4,0,0">
                                            <Border StrokeShape="Ellipse"
                                                    HeightRequest="6"
                                                    WidthRequest="6"
                                                    BackgroundColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='text'}"
                                                    StrokeThickness="0"
                                                    IsVisible="{Binding TaskCount, Converter={StaticResource GreaterThanZeroConverter}}"/>
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>
                                    
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CalendarViewModel}}, Path=SelectDayInWeekCommand}"
                                                              CommandParameter="{Binding .}"/>
                                    </Border.GestureRecognizers>
                                </Border>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </HorizontalStackLayout>
                </ScrollView>

                <!-- Day Timeline -->
                <Grid Padding="24,16" BackgroundColor="White">
                    <BoxView Color="{StaticResource Gray100}" 
                             WidthRequest="2" 
                             HorizontalOptions="Start"
                             Margin="23,0,0,0"/>

                    <CollectionView ItemsSource="{Binding SelectedDayTasks}"
                                    SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:TaskItem">
                                <Grid ColumnDefinitions="80, *" Padding="0,0,0,24">
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CalendarViewModel}}, Path=NavigateToTaskItemCommand}"
                                                              CommandParameter="{Binding .}"/>
                                    </Grid.GestureRecognizers>
                                    
                                    <!-- Time Column -->
                                    <VerticalStackLayout HorizontalOptions="Start" Margin="0,8,0,0">
                                        <Label Text="{Binding Deadline, StringFormat='{0:hh:mm tt}'}" 
                                               FontFamily="InterMedium"
                                               FontSize="14" 
                                               TextColor="{StaticResource TextSecondaryLight}"/>
                                    </VerticalStackLayout>

                                    <!-- Event Card -->
                                    <Border Grid.Column="1"
                                            StrokeShape="RoundRectangle 12"
                                            BackgroundColor="#f8f9fa"
                                            StrokeThickness="0"
                                            Padding="16,12"
                                            Margin="8,0,0,0">
                                        <Grid ColumnDefinitions="Auto, *, Auto" ColumnSpacing="12">
                                            <!-- Event Icon/Circle -->
                                            <Border HeightRequest="48" 
                                                    WidthRequest="48" 
                                                    StrokeShape="RoundRectangle 24"
                                                    BackgroundColor="{Binding EffortBarColor}"
                                                    StrokeThickness="0"
                                                    HorizontalOptions="Center"
                                                    VerticalOptions="Center">
                                                <Label Text="{Binding Effort}"
                                                       FontFamily="InterBold"
                                                       FontSize="18"
                                                       TextColor="White"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"/>
                                            </Border>

                                            <!-- Event Details -->
                                            <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                                                <Label Text="{Binding Title}" 
                                                       FontFamily="InterSemiBold"
                                                       FontSize="16" 
                                                       TextColor="{StaticResource TextPrimaryLight}"/>
                                                
                                                <Label Text="{Binding Subject}" 
                                                       FontFamily="InterRegular"
                                                       FontSize="13" 
                                                       TextColor="{StaticResource TextSecondaryLight}"/>
                                                
                                                <!-- Progress Bar -->
                                                <Grid ColumnDefinitions="*, Auto" ColumnSpacing="8" Margin="0,4,0,0">
                                                    <ProgressBar Progress="{Binding CompletionPercent, Converter={StaticResource ProgressWidthConverter}}"
                                                                 ProgressColor="#2196F3"
                                                                 HeightRequest="4"
                                                                 VerticalOptions="Center"/>
                                                    <Label Grid.Column="1"
                                                           Text="{Binding CompletionPercent, StringFormat='{0}%'}"
                                                           FontFamily="InterMedium"
                                                           FontSize="11"
                                                           TextColor="#2196F3"
                                                           VerticalOptions="Center"/>
                                                </Grid>
                                            </VerticalStackLayout>

                                            <!-- Checkbox -->
                                            <Border Grid.Column="2"
                                                    StrokeShape="Ellipse"
                                                    HeightRequest="24"
                                                    WidthRequest="24"
                                                    Stroke="{Binding EffortBarColor}"
                                                    StrokeThickness="2"
                                                    BackgroundColor="Transparent"
                                                    VerticalOptions="Center">
                                                <Border.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CalendarViewModel}}, Path=ToggleTaskCompletionCommand}"
                                                                          CommandParameter="{Binding .}"/>
                                                </Border.GestureRecognizers>
                                            </Border>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Grid>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Month View -->
        <ScrollView Grid.Row="3" BackgroundColor="White" IsVisible="{Binding ViewMode, Converter={StaticResource ViewModeVisibilityConverter}, ConverterParameter='Month'}">
            <VerticalStackLayout Padding="16,0,16,16" Spacing="12">
                
                <!-- Month Navigation -->
                <Grid ColumnDefinitions="Auto, *, Auto" Padding="8,12">
                    <Border StrokeShape="RoundRectangle 20"
                            HeightRequest="36"
                            WidthRequest="36"
                            BackgroundColor="{StaticResource Gray100}"
                            StrokeThickness="0">
                        <Label Text="←" 
                               FontSize="20"
                               TextColor="{StaticResource TextPrimaryLight}"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding PreviousMonthCommand}"/>
                        </Border.GestureRecognizers>
                    </Border>
                    
                    <Label Grid.Column="1"
                           Text="{Binding CurrentMonth}"
                           FontFamily="InterSemiBold"
                           FontSize="16"
                           TextColor="{StaticResource TextPrimaryLight}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                    
                    <Border Grid.Column="2"
                            StrokeShape="RoundRectangle 20"
                            HeightRequest="36"
                            WidthRequest="36"
                            BackgroundColor="{StaticResource Gray100}"
                            StrokeThickness="0">
                        <Label Text="→" 
                               FontSize="20"
                               TextColor="{StaticResource TextPrimaryLight}"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NextMonthCommand}"/>
                        </Border.GestureRecognizers>
                    </Border>
                </Grid>

                <!-- Day Names Header -->
                <Grid ColumnDefinitions="*,*,*,*,*,*,*" Padding="4,0">
                    <Label Text="Sun" FontFamily="InterSemiBold" FontSize="12" TextColor="{StaticResource Gray400}" HorizontalOptions="Center"/>
                    <Label Grid.Column="1" Text="Mon" FontFamily="InterSemiBold" FontSize="12" TextColor="{StaticResource Gray400}" HorizontalOptions="Center"/>
                    <Label Grid.Column="2" Text="Tue" FontFamily="InterSemiBold" FontSize="12" TextColor="{StaticResource Gray400}" HorizontalOptions="Center"/>
                    <Label Grid.Column="3" Text="Wed" FontFamily="InterSemiBold" FontSize="12" TextColor="{StaticResource Gray400}" HorizontalOptions="Center"/>
                    <Label Grid.Column="4" Text="Thu" FontFamily="InterSemiBold" FontSize="12" TextColor="{StaticResource Gray400}" HorizontalOptions="Center"/>
                    <Label Grid.Column="5" Text="Fri" FontFamily="InterSemiBold" FontSize="12" TextColor="{StaticResource Gray400}" HorizontalOptions="Center"/>
                    <Label Grid.Column="6" Text="Sat" FontFamily="InterSemiBold" FontSize="12" TextColor="{StaticResource Gray400}" HorizontalOptions="Center"/>
                </Grid>

                <!-- Calendar Grid Container with Border -->
                <Border StrokeShape="RoundRectangle 8"
                        Stroke="{StaticResource Gray200}"
                        StrokeThickness="1"
                        BackgroundColor="White">
                    <CollectionView ItemsSource="{Binding MonthDays}">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Vertical" Span="7"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:CalendarDay">
                                <!-- Grid Cell with Borders -->
                                <Border Stroke="{StaticResource Gray200}"
                                        StrokeThickness="0.5"
                                        BackgroundColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter='selectedday'}"
                                        Padding="4"
                                        HeightRequest="56">
                                    <Grid RowDefinitions="Auto,*,Auto">
                                        <!-- Day Number -->
                                        <Label Text="{Binding DayNumber}"
                                               FontFamily="InterSemiBold"
                                               FontSize="14"
                                               TextColor="{Binding IsCurrentMonth, Converter={StaticResource BoolToTextColorConverter}, ConverterParameter='daynum'}"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Start"
                                               Margin="0,4,0,0"/>
                                        
                                        <!-- Today Indicator Dot -->
                                        <Border Grid.Row="1"
                                                StrokeShape="Ellipse"
                                                HeightRequest="4"
                                                WidthRequest="4"
                                                BackgroundColor="{StaticResource Primary}"
                                                StrokeThickness="0"
                                                HorizontalOptions="Center"
                                                VerticalOptions="Center"
                                                IsVisible="{Binding IsToday}"/>
                                        
                                        <!-- Daily Effort Bar -->
                                        <BoxView Grid.Row="2"
                                                 Color="{Binding EffortBarColor}"
                                                 HeightRequest="3"
                                                 CornerRadius="1.5"
                                                 HorizontalOptions="Fill"
                                                 VerticalOptions="End"
                                                 Margin="4,0,4,4"
                                                 IsVisible="{Binding HasEffort}"/>
                                    </Grid>
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CalendarViewModel}}, Path=SelectDayCommand}"
                                                              CommandParameter="{Binding .}"/>
                                    </Border.GestureRecognizers>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Border>

                <!-- Selected Day Tasks Section -->
                <VerticalStackLayout Spacing="12" Margin="0,16,0,0">
                    <!-- Selected Day Header -->
                    <Grid ColumnDefinitions="*, Auto" Padding="8,0">
                        <Label Text="{Binding SelectedDayTitle}"
                               FontFamily="InterBold"
                               FontSize="18"
                               TextColor="{StaticResource TextPrimaryLight}"
                               VerticalOptions="Center"/>
                        
                        <Border Grid.Column="1" 
                                StrokeShape="RoundRectangle 4" 
                                BackgroundColor="#ecf2ff" 
                                StrokeThickness="0" 
                                Padding="8,4"
                                VerticalOptions="Center"
                                IsVisible="{Binding SelectedDayTasks.Count, Converter={StaticResource GreaterThanZeroConverter}}">
                            <Label Text="{Binding SelectedDayTasks.Count, StringFormat='{0} Tasks'}" 
                                   FontFamily="InterBold"
                                   FontSize="11" 
                                   TextColor="{StaticResource Primary}"/>
                        </Border>
                    </Grid>

                    <!-- Tasks List -->
                    <CollectionView ItemsSource="{Binding SelectedDayTasks}"
                                    SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:TaskItem">
                                <Border StrokeShape="RoundRectangle 12"
                                        BackgroundColor="#f8f9fa"
                                        StrokeThickness="0"
                                        Padding="12"
                                        Margin="0,0,0,8">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CalendarViewModel}}, Path=NavigateToTaskItemCommand}"
                                                              CommandParameter="{Binding .}"/>
                                    </Border.GestureRecognizers>
                                    
                                    <Grid ColumnDefinitions="Auto, *" ColumnSpacing="12">
                                        <!-- Time Column -->
                                        <VerticalStackLayout HorizontalOptions="Start" VerticalOptions="Start">
                                            <Label Text="{Binding Deadline, StringFormat='{0:hh:mm}'}" 
                                                   FontFamily="InterMedium"
                                                   FontSize="12" 
                                                   TextColor="{StaticResource TextPrimaryLight}"/>
                                            <Label Text="{Binding Deadline, StringFormat='{0:tt}'}" 
                                                   FontFamily="InterRegular"
                                                   FontSize="10" 
                                                   TextColor="{StaticResource Gray400}"/>
                                        </VerticalStackLayout>

                                        <!-- Content Column -->
                                        <VerticalStackLayout Grid.Column="1" Spacing="4">
                                            <!-- Effort Indicator Dot and Title -->
                                            <HorizontalStackLayout Spacing="8">
                                                <Border HeightRequest="6" 
                                                        WidthRequest="6" 
                                                        StrokeShape="Ellipse"
                                                        BackgroundColor="{Binding EffortBarColor}" 
                                                        StrokeThickness="0"
                                                        VerticalOptions="Center"/>
                                                <Label Text="{Binding Title}" 
                                                       FontFamily="InterSemiBold"
                                                       FontSize="14" 
                                                       TextColor="{StaticResource TextPrimaryLight}"
                                                       VerticalOptions="Center"/>
                                            </HorizontalStackLayout>
                                            
                                            <!-- Subject and Category -->
                                            <Label Text="{Binding Subject}" 
                                                   FontFamily="InterRegular"
                                                   FontSize="12" 
                                                   TextColor="{StaticResource TextSecondaryLight}"/>
                                            
                                            <!-- Progress Bar -->
                                            <Grid ColumnDefinitions="*, Auto" ColumnSpacing="8" Margin="0,4,0,0">
                                                <ProgressBar Progress="{Binding CompletionPercent, Converter={StaticResource ProgressWidthConverter}}"
                                                             ProgressColor="#2196F3"
                                                             HeightRequest="4"
                                                             VerticalOptions="Center"/>
                                                <Label Grid.Column="1"
                                                       Text="{Binding CompletionPercent, StringFormat='{0}% complete'}"
                                                       FontFamily="InterMedium"
                                                       FontSize="10"
                                                       TextColor="#2196F3"/>
                                            </Grid>
                                        </VerticalStackLayout>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Timeline & Week Content -->
        <ScrollView Grid.Row="3" BackgroundColor="White" IsVisible="{Binding ViewMode, Converter={StaticResource ViewModeVisibilityConverter}, ConverterParameter='Timeline,Week'}">
            <Grid>
                <!-- Timeline Line (Vertical Guide) -->
                <BoxView Color="{StaticResource Gray100}" 
                         WidthRequest="1" 
                         HorizontalOptions="Start"
                         Margin="27,0,0,0"/>

                <!-- Timeline Items -->
                <CollectionView ItemsSource="{Binding Days}" 
                                IsGrouped="True"
                                SelectionMode="None"
                                Margin="0,0,0,16">
                    
                    <CollectionView.GroupHeaderTemplate>
                        <DataTemplate x:DataType="models:CalendarGroup">
                            <Grid Padding="24,12" 
                                  BackgroundColor="White" 
                                  ColumnDefinitions="Auto, *, Auto" 
                                  ColumnSpacing="12">
                                
                                <!-- Date Badge -->
                                <Border StrokeShape="RoundRectangle 8" 
                                        HeightRequest="48" 
                                        WidthRequest="48" 
                                        BackgroundColor="{Binding IsToday, Converter={StaticResource BoolToColorConverter}, ConverterParameter='primary'}"
                                        StrokeThickness="0"
                                        Padding="6,4">
                                    <VerticalStackLayout HorizontalOptions="Center" 
                                                         VerticalOptions="Center" 
                                                         Spacing="-2">
                                        <Label Text="{Binding DayName}" 
                                               FontFamily="InterMedium"
                                               FontSize="9" 
                                               TextColor="{Binding IsToday, Converter={StaticResource BoolToColorConverter}, ConverterParameter='text'}" 
                                               HorizontalOptions="Center" 
                                               TextTransform="Uppercase"
                                               Margin="0,1,0,0"/>
                                        <Label Text="{Binding DayNumber}" 
                                               FontFamily="InterBold"
                                               FontSize="20" 
                                               TextColor="{Binding IsToday, Converter={StaticResource BoolToColorConverter}, ConverterParameter='text'}" 
                                               HorizontalOptions="Center"
                                               Margin="0,-1,0,0"/>
                                    </VerticalStackLayout>
                                </Border>
                                
                                <Label Grid.Column="1" 
                                       Text="{Binding Title}" 
                                       FontFamily="InterBold"
                                       FontSize="18" 
                                       TextColor="{StaticResource TextPrimaryLight}" 
                                       VerticalOptions="Center"/>
                                
                                <Border Grid.Column="2" 
                                        StrokeShape="RoundRectangle 4" 
                                        BackgroundColor="#ecf2ff" 
                                        StrokeThickness="0" 
                                        Padding="8,4"
                                        VerticalOptions="Center">
                                    <Label Text="{Binding TaskCount, StringFormat='{0} Tasks'}" 
                                           FontFamily="InterBold"
                                           FontSize="11" 
                                           TextColor="{StaticResource Primary}"/>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.GroupHeaderTemplate>

                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:CalendarItem">
                            <Grid ColumnDefinitions="72, *" Padding="24,12,24,0">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CalendarViewModel}}, Path=NavigateToTaskCommand}"
                                                          CommandParameter="{Binding .}"/>
                                </Grid.GestureRecognizers>
                                
                                <!-- Time Column -->
                                <VerticalStackLayout HorizontalOptions="End" Margin="0,0,16,0">
                                    <Label Text="{Binding Time}" 
                                           FontFamily="InterMedium"
                                           FontSize="14" 
                                           TextColor="{StaticResource TextPrimaryLight}" 
                                           HorizontalOptions="End"/>
                                    <Label Text="{Binding Period}" 
                                           FontFamily="InterRegular"
                                           FontSize="12" 
                                           TextColor="{StaticResource Gray400}" 
                                           HorizontalOptions="End"/>
                                </VerticalStackLayout>

                                <!-- Content Column -->
                                <Grid Grid.Column="1" Padding="16,0,0,24" RowDefinitions="Auto,Auto">
                                    <!-- Title Row -->
                                    <HorizontalStackLayout Spacing="12">
                                        <!-- Effort Indicator Dot -->
                                        <Border HeightRequest="6" 
                                                WidthRequest="6" 
                                                StrokeShape="Ellipse"
                                                BackgroundColor="{Binding EffortBarColor}" 
                                                StrokeThickness="0"
                                                VerticalOptions="Start" 
                                                Margin="0,8,0,0"/>

                                        <VerticalStackLayout Spacing="4">
                                            <Label Text="{Binding Title}" 
                                                   FontFamily="InterSemiBold"
                                                   FontSize="16" 
                                                   TextColor="{StaticResource TextPrimaryLight}"/>
                                            
                                            <!-- Subtitle with Effort Badge -->
                                            <HorizontalStackLayout Spacing="8">
                                                <Label Text="{Binding Subtitle}" 
                                                       FontFamily="InterRegular"
                                                       FontSize="14" 
                                                       TextColor="{StaticResource TextSecondaryLight}"
                                                       VerticalOptions="Center"/>
                                                
                                                <!-- Effort Badge -->
                                                <Border StrokeShape="RoundRectangle 3"
                                                        BackgroundColor="{Binding EffortBarColor}"
                                                        Padding="6,2"
                                                        StrokeThickness="0"
                                                        VerticalOptions="Center">
                                                    <Label Text="{Binding Effort, StringFormat='Effort: {0}/10'}"
                                                           FontFamily="InterMedium"
                                                           FontSize="11"
                                                           TextColor="White"/>
                                                </Border>
                                            </HorizontalStackLayout>
                                        </VerticalStackLayout>
                                    </HorizontalStackLayout>
                                    
                                    <!-- Completion Bar Row -->
                                    <HorizontalStackLayout Grid.Row="1" Spacing="8" Margin="18,8,0,0">
                                        <!-- Progress Bar -->
                                        <Grid WidthRequest="150">
                                            <ProgressBar Progress="{Binding CompletionPercent, Converter={StaticResource ProgressWidthConverter}}"
                                                         ProgressColor="#2196F3"
                                                         HeightRequest="4"
                                                         VerticalOptions="Center"/>
                                        </Grid>
                                        
                                        <!-- Completion Percentage -->
                                        <Label Text="{Binding CompletionPercent, StringFormat='{0}% complete'}"
                                               FontFamily="InterMedium"
                                               FontSize="11"
                                               TextColor="#2196F3"
                                               VerticalOptions="Center"/>
                                    </HorizontalStackLayout>
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>
