<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Weak.ViewModels"
             x:Class="Weak.Views.SettingsView"
             Title="Settings">

    <ScrollView BackgroundColor="{StaticResource BackgroundLight}">
        <VerticalStackLayout Padding="24" Spacing="24">
            
            <!-- Header -->
            <Label Text="Settings" 
                   FontSize="30" 
                   FontAttributes="Bold" 
                   TextColor="{StaticResource TextPrimaryLight}"
                   Margin="0,24,0,0"/>

            <!-- Section: Data Management -->
            <VerticalStackLayout Spacing="8">
                <Label Text="DATA MANAGEMENT" FontSize="12" TextColor="{StaticResource TextSecondaryLight}" FontAttributes="Bold" Margin="16,0,0,0"/>
                <Border StrokeShape="RoundRectangle 12" BackgroundColor="White" Stroke="{StaticResource Gray100}" StrokeThickness="1">
                    <VerticalStackLayout>
                        <Grid Padding="16" ColumnDefinitions="*, Auto">
                            <Label Text="Import Data" FontSize="16" VerticalOptions="Center" TextColor="{StaticResource TextPrimaryLight}"/>
                            <Label Grid.Column="1" Text=">" FontSize="20" FontAttributes="Bold" TextColor="{StaticResource TextSecondaryLight}"/>
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer/>
                            </Grid.GestureRecognizers>
                        </Grid>
                        <BoxView HeightRequest="1" Color="{StaticResource Gray100}"/>
                        <Grid Padding="16" ColumnDefinitions="*, Auto">
                            <VerticalStackLayout>
                                <Label Text="Export Data" FontSize="16" TextColor="{StaticResource TextPrimaryLight}"/>
                                <Label Text="PDF, CSV" FontSize="12" TextColor="{StaticResource TextSecondaryLight}"/>
                            </VerticalStackLayout>
                            <Label Grid.Column="1" Text=">" FontSize="20" FontAttributes="Bold" TextColor="{StaticResource TextSecondaryLight}" VerticalOptions="Center"/>
                        </Grid>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>

            <!-- Section: Preferences -->
            <VerticalStackLayout Spacing="8">
                <Label Text="PREFERENCES" FontSize="12" TextColor="{StaticResource TextSecondaryLight}" FontAttributes="Bold" Margin="16,0,0,0"/>
                <Border StrokeShape="RoundRectangle 12" BackgroundColor="White" Stroke="{StaticResource Gray100}" StrokeThickness="1">
                    <VerticalStackLayout>
                        <Grid Padding="16" ColumnDefinitions="*, Auto">
                            <Label Text="Notifications" FontSize="16" VerticalOptions="Center" TextColor="{StaticResource TextPrimaryLight}"/>
                            <Switch Grid.Column="1" IsToggled="{Binding NotificationsEnabled}" OnColor="{StaticResource Primary}"/>
                        </Grid>
                        <BoxView HeightRequest="1" Color="{StaticResource Gray100}"/>
                        <Grid Padding="16" ColumnDefinitions="*, Auto">
                            <VerticalStackLayout>
                                <Label Text="Calendar Sync" FontSize="16" TextColor="{StaticResource TextPrimaryLight}"/>
                                <Label Text="Last synced: Today 9:41 AM" FontSize="12" TextColor="{StaticResource Primary}"/>
                            </VerticalStackLayout>
                            <Switch Grid.Column="1" IsToggled="{Binding CalendarSyncEnabled}" OnColor="{StaticResource Primary}"/>
                        </Grid>
                        <BoxView HeightRequest="1" Color="{StaticResource Gray100}"/>
                        <Grid Padding="16" ColumnDefinitions="*, Auto">
                            <Label Text="Start of Week" FontSize="16" VerticalOptions="Center" TextColor="{StaticResource TextPrimaryLight}"/>
                            <HorizontalStackLayout Grid.Column="1" Spacing="8" VerticalOptions="Center">
                                <Label Text="Monday" FontSize="16" TextColor="{StaticResource TextSecondaryLight}"/>
                                <Label Text="arrow_forward_ios" FontFamily="MaterialIcons" FontSize="16" TextColor="{StaticResource TextSecondaryLight}" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Grid>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>

            <!-- Section: Information -->
            <VerticalStackLayout Spacing="8">
                <Label Text="INFORMATION" FontSize="12" TextColor="{StaticResource TextSecondaryLight}" FontAttributes="Bold" Margin="16,0,0,0"/>
                <Border StrokeShape="RoundRectangle 12" BackgroundColor="White" Stroke="{StaticResource Gray100}" StrokeThickness="1">
                    <VerticalStackLayout>
                        <Grid Padding="16" ColumnDefinitions="*, Auto">
                            <Label Text="About" FontSize="16" VerticalOptions="Center" TextColor="{StaticResource TextPrimaryLight}"/>
                            <Label Grid.Column="1" Text=">" FontSize="20" FontAttributes="Bold" TextColor="{StaticResource TextSecondaryLight}"/>
                        </Grid>
                        <BoxView HeightRequest="1" Color="{StaticResource Gray100}"/>
                        <Grid Padding="16" ColumnDefinitions="*, Auto">
                            <Label Text="Feedback" FontSize="16" VerticalOptions="Center" TextColor="{StaticResource TextPrimaryLight}"/>
                            <Label Grid.Column="1" Text=">" FontSize="20" FontAttributes="Bold" TextColor="{StaticResource TextSecondaryLight}"/>
                        </Grid>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>

            <!-- Reset Settings -->
            <Border StrokeShape="RoundRectangle 12" BackgroundColor="White" Stroke="{StaticResource Gray100}" StrokeThickness="1" Padding="16" Margin="0,0,0,24">
                <Label Text="Reset All Settings" TextColor="#ef4444" FontSize="16" HorizontalOptions="Center"/>
            </Border>

            <Label Text="Version 2.4.0 (Build 309)" FontSize="12" TextColor="{StaticResource TextSecondaryLight}" HorizontalOptions="Center" Margin="0,0,0,40"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
