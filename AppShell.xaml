<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Weak.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Weak.Views"
    Shell.NavBarIsVisible="False"
    Shell.TabBarBackgroundColor="White"
    Shell.TabBarForegroundColor="#135bec"
    Shell.TabBarUnselectedColor="#94a3b8">

    <TabBar>
        <ShellContent 
            Title="Agenda" 
            Icon="calendar.svg"
            ContentTemplate="{DataTemplate views:CalendarView}" 
            Route="CalendarView" />
            
        <ShellContent 
            Title="To-Do" 
            Icon="check.svg"
            ContentTemplate="{DataTemplate views:TasksView}" 
            Route="TasksView" />
            
        <ShellContent 
            Title="Workload" 
            Icon="chart.svg"
            ContentTemplate="{DataTemplate views:HomeView}" 
            Route="HomeView" />
            
        <ShellContent 
            Title="Settings" 
            Icon="settings.svg"
            ContentTemplate="{DataTemplate views:SettingsView}" 
            Route="SettingsView" />
    </TabBar>

</Shell>
